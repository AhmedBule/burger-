<h1>Burgers!</h1>

<h2>Enjoy your burger. Yummy!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{this.name}}
      <button class="devoured" id = {{this.id}}> 
        Enjoy your burger</button>

    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers already orderd</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{this.name}}
      <button class="delete-burger" id = {{this.id}}> 
        Delete burger</button>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured
</label><br>
    <input type="radio" name="devour" value="1" checked> Ordered and Devoured<br>
    <input type="radio" name="devour" value="0"> Just Ordered
  </div>

  <button type="submit">Add a Burger</button>
</form>
