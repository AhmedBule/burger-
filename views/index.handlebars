<div class="jumbotron bg-warning">
  <h1>Burgers!</h1>
  <p>Using Express, Handlebars, MySQL</p>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>Enjoy your burger. Yummy!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{this.name}}
        <button class="devoured btn btn-primary" id={{this.id}}>
          Enjoy your burger</button>

        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">devoured
          </label><br>
          <input type="radio" name="devour" value="1" checked> Ordered and Devoured<br>
          <input type="radio" name="devour" value="0"> Just Ordered
        </div>

        <button type="submit" class="btn btn-secondary">Add a Burger</button>
      </form>
    </div>
    <div class="col-md-4 bg-info">
      <h2>Burgers already orderd</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{this.name}}
        <button class="delete-burger btn btn-danger" id={{this.id}}>
          Delete burger</button>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<footer>Copyright by Ahmed Bule</footer>